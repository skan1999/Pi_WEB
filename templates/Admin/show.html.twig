{% extends 'baseBack.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ utilisateur.nom }}</td>
            </tr>
             <tr>
                <th>Email</th>
                <td>{{ utilisateur.email }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ utilisateur.prenom }}</td>
            </tr>
            
            <tr>
                <th>Role</th>
                <td>{{ utilisateur.role }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ utilisateur.genre }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('' ~ utilisateur.img) }}" alt="User Image" height="500" width="450" ></td>
            </tr>
            
            
            <tr>
                <th>IsBanned</th>
                {% if utilisateur.isBanned == 0 %} 
                <td> No</td>
                {% endif %}
                {% if utilisateur.isBanned == 1 %}
                <td> Yes</td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <div align = "center">
    <a href="">
    <button class="btn btn-warning btn-rounded btn-fw">Edit</button>
    </a>
    <br>
    <br>
    {{ include('Admin/_delete_form.html.twig') }}
    </div>


    <div align = "right">
    <a href="{{ path('app_index') }}">
    <button type="button" class="btn btn-dark btn-rounded btn-fw">back to list</button>
    </a>
    </div>
{% endblock %}
